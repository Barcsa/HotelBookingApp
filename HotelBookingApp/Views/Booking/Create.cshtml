@model HotelBookingApp.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<div class="container mt-4">

    <h2>Create Booking</h2>
    <hr />

    @if (!ViewData.ModelState.IsValid)
    {
        if (ViewData.ModelState[string.Empty]?.Errors.Count > 0)
        {
            <div class="text-danger">
                @foreach (var error in ViewData.ModelState[string.Empty].Errors)
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }
    }

    <form asp-action="Create" method="post">

        <div class="mb-3">
            <label class="form-label">User</label>
            <select asp-for="UserId" class="form-select" asp-items="ViewBag.Users"></select>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Room</label>
            <select asp-for="RoomId" class="form-select" asp-items="ViewBag.Rooms"></select>
            <span asp-validation-for="RoomId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Start Date</label>
            <input asp-for="StartDate" class="form-control datetimepicker" autocomplete="off" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">End Date</label>
            <input asp-for="EndDate" class="form-control datetimepicker" autocomplete="off" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a href="/Booking/Index" class="btn btn-secondary ms-2">Cancel</a>

    </form>

</div>

@section Scripts {
    <script>
        flatpickr(".datetimepicker", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            time_24hr: true,
            minuteIncrement: 15
        });
    </script>
}
