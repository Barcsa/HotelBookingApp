@model IEnumerable<HotelBookingApp.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Bookings</h2>
        <a class="btn btn-primary" href="/Booking/Create">Create Booking</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>User</th>
                <th>Room</th>
                <th>Start</th>
                <th>End</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.User?.FirstName @b.User?.LastName</td>
                    <td>@b.Room?.Name</td>
                    <td>@b.StartDate</td>
                    <td>@b.EndDate</td>

                    <td>
                        <a class="btn btn-sm btn-warning me-1" href="/Booking/Edit/@b.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" href="/Booking/Delete/@b.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
