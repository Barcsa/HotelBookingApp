@model IEnumerable<HotelBookingApp.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Rooms</h2>
        <a class="btn btn-primary" href="/Room/Create">Create Room</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Capacity</th>
                <th>Description</th>
                <th style="width: 150px;">Actions</th>
                <th style="width: 90px;">Calendar</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.Name</td>
                    <td>@room.Capacity</td>
                    <td>@room.Description</td>

                    <td>
                        <a class="btn btn-sm btn-warning me-1" href="/Room/Edit/@room.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" href="/Room/Delete/@room.Id">Delete</a>
                    </td>

                    <td style="white-space: nowrap;">
                        <a class="btn btn-sm btn-info" href="/Room/Calendar/@room.Id">
                            View Calendar
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
