@model HotelBookingApp.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">

    <h2>Delete User</h2>
    <hr />

    <p class="text-danger">Are you sure you want to delete this user?</p>

    <dl class="row">
        <dt class="col-sm-3">First Name</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>

        <dt class="col-sm-3">Last Name</dt>
        <dd class="col-sm-9">@Model.LastName</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Is Admin</dt>
        <dd class="col-sm-9">@Model.IsAdmin</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="/User/Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>

</div>
