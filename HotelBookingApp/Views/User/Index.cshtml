@model IEnumerable<HotelBookingApp.Models.User>

@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>User List</h2>
        <a class="btn btn-primary" href="/User/Create">Create User</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Admin</th>
                <th style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@(user.IsAdmin ? "Yes" : "No")</td>

                    <td>
                        <a class="btn btn-sm btn-warning me-1" href="/User/Edit/@user.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" href="/User/Delete/@user.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
